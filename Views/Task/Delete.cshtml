@model Licenta3.Models.Task

@{
    ViewData["Title"] = "Delete";
}

<style>

    .title {
        margin-top: 3%;
        margin-bottom: 10px;
    }

</style>

<h2 class="text-danger title">Ești sigur că dorești ștergerea?</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cod    
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            Denumire
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Condiționări
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dependencies)
        </dd>
        <dt class = "col-sm-2">
            Durată
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            Unitate de măsură
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MeasurementUnit)
        </dd>
        <dt class = "col-sm-2">
            Numele proiectului
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Șterge activitatea curentă" class="btn btn-danger" />
        <a asp-controller="Task" asp-action="Index" asp-route-id="@Model.ProjectId"
           class="btn btn-outline-info mx-2"><i class="bi bi-trash-fill"></i>Înapoi spre lista activităților</a>
    </form>
</div>
