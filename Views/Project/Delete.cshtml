@model Licenta3.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<style>

    .title{
        margin-top: 3%;
        margin-bottom: 10px;
    }

</style>

<h2 class="text-danger title">Ești sigur că dorești ștergerea?</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nume
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Șterge proiectul curent" class="btn btn-outline-danger" />
        <a asp-controller="Project" asp-action="Index"
           class="btn btn-outline-info mx-2"><i class="bi bi-trash-fill"></i>Înapoi spre lista proiectelor</a>
    </form>
</div>
