@model Licenta3.Models.Project

@{
    ViewData["Title"] = "Create";
}

<style>

    .title {
        margin-top: 3%;
        margin-bottom: 10px;
    }   

</style>

<h2 class="text-primary title">Creează un nou proiect</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nume</label>
                <input asp-for="Name" class="form-control mb-4" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingDate" class="control-label">Data de începere</label>
                <input asp-for="StartingDate" class="form-control mb-4" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creează proiectul" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Project" asp-action="Index"
       class="btn btn-outline-info mt-2"><i class="bi bi-trash-fill"></i>Înapoi spre lista proiectelor</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
